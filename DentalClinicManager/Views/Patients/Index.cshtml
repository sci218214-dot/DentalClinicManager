@model IEnumerable<DentalClinicManager.Models.Patient>

@{
    ViewData["Title"] = "المرضى";
}

<h1>المرضى</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-8">
            <input type="text" name="searchString" class="form-control" placeholder="ابحث باسم المريض" value="@ViewData["CurrentFilter"]" />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-outline-primary">بحث</button>
        </div>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">إضافة مريض جديد</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>الاسم</th>
            <th>تاريخ الميلاد</th>
            <th>الجنس</th>
            <th>الهاتف</th>
            <th>البريد</th>
            <th>العنوان</th>
            <th>العمليات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PatientId" class="btn btn-sm btn-warning" title="تعديل">
                        <i class="bi bi-pencil-square"></i> تعديل
                    </a>
                    <a asp-action="Details" asp-route-id="@item.PatientId" class="btn btn-sm btn-info text-white" title="تفاصيل">
                        <i class="bi bi-info-circle"></i> تفاصيل
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.PatientId" class="btn btn-sm btn-danger" title="حذف">
                        <i class="bi bi-trash"></i> حذف
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
