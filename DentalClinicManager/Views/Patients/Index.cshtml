@model IEnumerable<DentalClinicManager.Models.Patient>

@{
    ViewData["Title"] = "المرضى";
}

<h1>المرضى</h1>

<form method="get" asp-action="Index" class="mb-3">
    <input type="text" name="searchString" placeholder="ابحث باسم المريض" class="form-control" style="width: 300px; display: inline-block;" />
    <button type="submit" class="btn btn-outline-primary">بحث</button>
</form>

<a class="btn btn-primary mb-3" asp-action="Create">إضافة مريض جديد</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>تاريخ الميلاد</th>
            <th>الجنس</th>
            <th>الهاتف</th>
            <th>البريد</th>
            <th>العنوان</th>
            <th>العمليات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.DateOfBirth.ToShortDateString()</td>
                <td>@patient.Gender</td>
                <td>@patient.Phone</td>
                <td>@patient.Email</td>
                <td>@patient.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@patient.PatientId">تعديل</a> |
                    <a asp-action="Details" asp-route-id="@patient.PatientId">تفاصيل</a> |
                    <a asp-action="Delete" asp-route-id="@patient.PatientId">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
