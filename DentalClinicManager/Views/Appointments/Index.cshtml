@model IEnumerable<DentalClinicManager.Models.Appointment>

@{
    ViewData["Title"] = "المواعيد";
}

<h1>المواعيد</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">إضافة موعد جديد</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>التاريخ</th>
            <th>الوقت</th>
            <th>المريض</th>
            <th>الطبيب</th>
            <th>ملاحظات</th>
            <th>العمليات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.Time)</td>
                <td>@Html.DisplayFor(modelItem => item.Patient.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Doctor.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-warning" title="تعديل">
                        <i class="bi bi-pencil-square"></i> تعديل
                    </a>
                    <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-info text-white" title="تفاصيل">
                        <i class="bi bi-info-circle"></i> تفاصيل
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-danger" title="حذف">
                        <i class="bi bi-trash"></i> حذف
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
